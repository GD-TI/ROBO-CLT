PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=simulacao_bancaria
DB_USER=postgres
DB_PASSWORD=postgres

# Redis (Google Cloud Memorystore ou local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false
# Para Google Cloud Memorystore:
# REDIS_HOST=10.x.x.x (IP interno da instância)
# REDIS_PORT=6379
# REDIS_PASSWORD=sua_senha (se AUTH habilitado)
# REDIS_TLS=true (se TLS habilitado)

# JWT
JWT_SECRET=sua_chave_secreta_super_segura_aqui_mude_em_producao
JWT_EXPIRES_IN=24h

# API Externa
BFF_BASE_URL=https://bff.v8sistema.com
V8_BFF_BASE_URL=https://v8-bff-prod.yellowisland-b252a8a0.eastus.azurecontainerapps.io

# Config padrão
DEFAULT_CONFIG_ID=c51e2ded-15c7-4de8-b4d4-fa147092d8af

# Worker Concurrency (ajuste conforme recursos disponíveis e número de credenciais)
# Com 60+ credenciais bancárias, 120 workers = ~2 requisições por credencial
MAX_CONCURRENT_SIMULATIONS=120
MAX_CONCURRENT_RETRIES=60

# Rate limiting
CONSULT_STATUS_RETRY_INTERVAL=3000
CONSULT_STATUS_MAX_RETRIES=60
